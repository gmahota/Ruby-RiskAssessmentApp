<h1>Listing impacts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Value</th>
    <th>Classification</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @impacts.each do |impact| %>
  <tr>
    <td><%= impact.name %></td>
    <td><%= impact.value %></td>
    <td><%= impact.classification_id %></td>
    <td><%= link_to 'Show', impact %></td>
    <td><%= link_to 'Edit', edit_impact_path(impact) %></td>
    <td><%= link_to 'Destroy', impact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

