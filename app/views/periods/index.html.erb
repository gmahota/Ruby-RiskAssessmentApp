<h1>Listing periods</h1>
<%= form_tag periods_path, :method => :get do %>
  <p>
    <%= text_field_tag :from_date, params[:from_date],  :class => 'datepicker' %>
    <%= text_field_tag :to_date, params[:to_date],  :class => 'datepicker' %>
    <%= submit_tag "Search", :from_date => nil %>
  </p>
<% end %>



<table class='table'>
  <tr>
    <th>From date</th>
    <th>To date</th>
    <th>From time</th>
    <th>To time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @periods.each do |period| %>
  <tr>
    <td><%= period.from_date %></td>
    <td><%= period.to_date %></td>
    <td><%= period.from_time %></td>
    <td><%= period.to_time %></td>
    <td><%= link_to 'Show', period %></td>
    <td><%= link_to 'Edit', edit_period_path(period) %></td>
    <td><%= link_to 'Destroy', period, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

